<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/book_shelf" />

            <Button
                android:id="@+id/findBook"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1.0"
                android:background="@drawable/border"
                android:gravity="center"
                android:letterSpacing="0.04"

                android:lineSpacingExtra="6.5sp"
                android:textColor="#707070"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="Найти книгу" />

            <Button
                android:id="@+id/findShelf"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1.0"
                android:background="@drawable/border"
                android:gravity="center"
                android:letterSpacing="0.04"

                android:lineSpacingExtra="6.5sp"
                android:textColor="#707070"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="Поиск полок" />

            <Button
                android:id="@+id/addBook"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1.0"
                android:background="@drawable/border"
                android:gravity="center"
                android:letterSpacing="0.04"

                android:lineSpacingExtra="6.5sp"
                android:textColor="#707070"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="Добавить книгу" />

            <Button
                android:id="@+id/lostBook"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1.0"
                android:background="@drawable/border"
                android:gravity="center"
                android:letterSpacing="0.04"

                android:lineSpacingExtra="6.5sp"
                android:textColor="#707070"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="Отпустить книгу" />

            <Button
                android:id="@+id/myBooks"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1.0"
                android:background="@drawable/border"
                android:gravity="center"
                android:letterSpacing="0.04"

                android:lineSpacingExtra="6.5sp"
                android:textColor="#707070"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="Мои книги" />

            <Button
                android:id="@+id/frQuest"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1.0"
                android:background="@drawable/border"
                android:gravity="center"
                android:letterSpacing="0.04"

                android:lineSpacingExtra="6.5sp"
                android:textColor="#707070"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="Частые вопросы" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>