<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/button4"
                android:layout_width="68.5dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="150dp"
                android:background="@drawable/back"
                android:onClick="getBack" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="18sp"
                android:text="Регистрация"
                android:textColor="#979797"
                android:textSize="39.5sp" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="311.5dp"
                android:layout_height="353dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/d16"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/editTextTextEmailAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"

                    android:layout_weight="1.0"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:hint="Логин"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/editTextTextPersonName4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_weight="1.0"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:hint="Имя пользователя"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:hint="Адрес электронной почты"

                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"

                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:hint="Пароль"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1.0"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:hint="Повторите пароль"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Пароли не совпадают!"
                android:textColor="#FF0000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="253dp"
                android:layout_height="54.5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_button"
                android:letterSpacing="0.08"
                android:lineSpacingExtra="13.5sp"

                android:onClick="createAccount"
                android:text="Создать аккаунт"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>